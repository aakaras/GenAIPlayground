@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4">Chat with Alison Karas</h1>
        </div>

        <div class="form-group">
            <textarea id="userInput" class="form-control" rows="5" placeholder="Type your message here..."></textarea>
        </div>
        <div class="text-right">
            <button class="btn btn-primary" onclick="sendMessage()">Send</button>
            <button class="btn btn-secondary" onclick="clearChat()">Clear</button>
        </div>

        <div id="chatOutput" class="mt-4 border p-3" style="height: 300px; overflow-y: scroll;">
        </div>
    </div>

    <script>
        function sendMessage() {
            var userInput = document.getElementById("userInput").value;
            document.getElementById("userInput").value = ""; 

            // Send user input to the server using AJAX (fetch or XMLHttpRequest)
            fetch('/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'text/plain' 
                },
                body: userInput
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById("chatOutput").innerHTML += "<div><strong>You:</strong> " + userInput + "</div>";
                document.getElementById("chatOutput").innerHTML += "<div><strong>Bot:</strong> " + data + "</div>";
            });
        }

        function clearChat() {
            document.getElementById("chatOutput").innerHTML = "";
        }
    </script>
</body>
</html>